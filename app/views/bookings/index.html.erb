<h1>Here are all the bookings (lloguer true)</h1>
<ul>
  <% @bookings.order(bookingstart: :desc).where(lloguer: true).each do |booking| %>
  <li>
    <h2>
      Booking #<%= booking.id %> <%= link_to booking.activityname, booking_path(booking)%>
    </h2>
    <p>Start date: <%= booking.bookingstart %></p>
    <p>End date: <%= booking.bookingend %></p>
    <p>Room: <%= booking.room.name %></p>
    <p>Client: <%= booking.client.name %></p>
  </li>
  <% end %>
</ul>


