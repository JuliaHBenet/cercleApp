<div class="card">
  <div class="card-header">
    <h2>Please enter the new client info:</h2>
  </div>

  <div class="card-body">
    <%= simple_form_for @client do |f| %>

    <%= f.input :name, :label => "Nom" %>
    <%= f.input :idcard, :label => "NIF" %>
    <%= f.input :address, :label => "Adreça" %>
    <%= f.input :postcode, :label => "Codi Postal" %>
    <%= f.input :city, :label => "Ciutat" %>
    <%= f.input :contactname, :label => "Nom de contacte" %>
    <%= f.input :contactphone1, :label => "Telèfon 1" %>
    <%= f.input :contactphone2, :label => "Telèfon 2" %>
    <%= f.input :contactemail, :label => "Email" %>
    <%= f.input :comments, :label => "Comentaris" %>
    <%= f.input :lloguer, as: :radio_buttons %>
    <%= f.submit "Confirm client" %>

    <% end %>
  </div>
</div>
