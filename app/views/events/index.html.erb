<h1>Here are all the events (lloguer false for every user and true only for admin as specified in event_policy)</h1>
<ul>
  <% @events.order(eventstart: :desc).each do |event| %>
  <li>
    <h2>
      Event #<%= event.id %> <%= link_to event.name, event_path(event)%>
    </h2>
    <p>Start date: <%= event.eventstart %></p>
    <p>End date: <%= event.eventend %></p>
    <p>Room: <%= event.room.name %></p>
    <p>Client: <%= event.client.name %></p>
    <% if params[:status] == Event::PENDING %>
      <% if (event.status == Event::PENDING) && policy(event).accept_or_decline? %>
        <%= simple_form_for @event, url: accept_event_path(event), method: :patch do |f| %>
          <%= f.submit "Accept event" %>
        <% end %>
      <% end %>
    <% end %>
  </li>
  <% end %>
</ul>

<h4><%= link_to 'Back to informes', informes_path %></h4>

