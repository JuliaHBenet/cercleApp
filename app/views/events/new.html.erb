<h2>Please enter event details for <%= @client.name %>:</h2>

<%= simple_form_for @event do |f| %>

<%= f.input :name %>
<%= f.input :description %>
<%= f.input :eventstart %>
<%= f.input :eventend %>
<%= f.input :activitystart %>
<%= f.input :activityend %>
<%= f.input :representacio %>
<%= f.input :comments %>
<%= f.input :document %>
<%= f.association :room %>
<%= f.input :backgroundColor, :collection  => %w[blue red yellow green] %>
<%= f.input :borderColor, :collection  => %w[blue red yellow green] %>
<%= f.input :client_id, :as =>:hidden, :input_html => { :value => @client.id } %>
<%= f.submit "Confirm event" %>

<% end %>

<p><%= link_to "Back to all clients", clients_path %></p>
<%= link_to "Back to client"%>
